<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:other="clr-namespace:MFAAvalonia.ViewModels.Other"
             xmlns:pages="clr-namespace:MFAAvalonia.ViewModels.Pages"
             xmlns:views="clr-namespace:MFAAvalonia.Views.Pages"
             xmlns:controls="clr-namespace:MFAAvalonia.Views.UserControls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MFAAvalonia.Views.Pages.InstanceContainerView"
             x:DataType="other:InstanceTabBarViewModel">
    <Grid RowDefinitions="Auto,*">
        <controls:InstanceTabBar Grid.Row="0" Margin="15,5,15,0" DataContext="{Binding}"/>
        
        <ContentControl Grid.Row="1" Content="{Binding ActiveTab.View}" />
    </Grid>
</UserControl>
